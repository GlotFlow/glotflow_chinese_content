{
  "name": "glotflow-content",
  "version": "1.0.0",
  "description": "Static content generator for GlotFlow Chinese Discover feature",
  "type": "module",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "validate": "tsx scripts/validate.ts",
    "dev": "tsx watch scripts/build.ts",
    "clean": "rm -rf public/*",
    "cms": "npx decap-server",
    "serve": "npm run build && npx serve public -l 8080"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "marked": "^11.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "zod": "^3.22.4",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
